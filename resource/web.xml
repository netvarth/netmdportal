<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">
	<description>Spring REST Endpoints</description>
	<display-name>youNeverWait</display-name>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>webapp.youNeverWait</param-value>
	</context-param>


	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/classes/log4j.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<listener>
		<listener-class>com.nv.youNeverWait.common.ServerListener</listener-class>
	</listener>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>60000</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
            classpath:context.xml
            classpath:appDataSource.xml
            classpath:youNeverWait-context.xml
             
       </param-value>
	</context-param>



	<servlet>
		<servlet-name>youNeverWait</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>youNeverWait</servlet-name>
		<url-pattern>/ws/*</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>html/index.html</welcome-file>
	</welcome-file-list>
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>

</web-app>

